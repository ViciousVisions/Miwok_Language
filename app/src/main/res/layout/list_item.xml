<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_height"
    android:background="@color/tan_background"
    android:orientation="horizontal"
    android:minHeight="@dimen/list_item_height">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/image_width"
        android:layout_height="@dimen/image_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/linear_layout_words"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/play_image_view"
        android:layout_toRightOf="@id/image_view"
        android:layout_alignWithParentIfMissing="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/miwok_text_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingLeft="@dimen/primary_spacing"
            android:textColor="@color/miwok_text_color"
            android:textSize="@dimen/miwok_word_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/english_text_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:paddingLeft="@dimen/primary_spacing"
            android:textColor="@color/english_text_color"
            android:textSize="@dimen/english_word_size"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/play_image_view"
        android:layout_marginRight="@dimen/primary_spacing"
        android:layout_width="@dimen/play_image_width"
        android:layout_height="@dimen/play_image_height"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>